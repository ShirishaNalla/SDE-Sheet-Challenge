class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int i,j;
       int  rows=matrix.size();
        int cols=matrix[0].size();
        for(i=0;i<rows;i++)
        {
             for(j=0;j<cols;j++)
             {
                   if(matrix[i][j]==0)
                       
                   {
                       matrix[0][j]=0;
                       matrix[i][0]=0;
                
                   }
             }
        }
        for(i=0;i<rows;i++)
        {
            for(j=0;j<cols;j++)
            {
                if(matrix[i][0]==0 or matrix[0][j]==0)
                {
                    matrix[i][j]=0;

                }
             }
        }
        }
};
        
